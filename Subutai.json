{
    "name": "${environmentName}",
    "description": "Minecraft Server",
    "version": "1.1.0",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "mcs",
            "template": "debian-stretch",
            "peer-criteria": "SRV-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "tcp",
                    "domain": "${domain}",
                    "internal-port": "25565",
                    "external-port": "${port}"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "SRV-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-blueprint-minecraft/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domain}"
            },
            {
                "key": "minecraft_eula",
                "value": "${minecraftEula}"
            },
            {
                "key": "minecraft_motd",
                "value": "${minecraftMotd}"
            },
            {
                "key": "minecraft_allow_flight",
                "value": "${minecraftAllowFlight}"
            },
            {
                "key": "minecraft_allow_nether",
                "value": "${minecraftAllowNether}"
            },
            {
                "key": "minecraft_max_players",
                "value": "${minecraftMaxPlayers}"
            }
        ],
        "groups": [
            {
                "name": "mcs",
                "hostnames": [
                    "mcs"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "mc",
            "validation": "[a-zA-Z0-9]+"
        },
        "domain": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "port": {
            "description": "Enter port number (default is 25565 but that might not be available)",
            "type": "string",
            "default": "25565",
            "validation": "[0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "TINY",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        },
        "minecraftEula": {
            "description": "Accept Minecraft EULA",
            "type": "enum",
            "default": "false",
            "validation": "false,TRUE"
        },
        "minecraftMotd": {
            "description": "Minecraft Message of the Day",
            "type": "string",
            "default": "A Minecraft Server",
            "validation": "[^'][^']*"
        },
        "minecraftAllowFlight": {
            "description": "Allow flight",
            "type": "enum",
            "default": "false",
            "validation": "false,true"
        },
        "minecraftAllowNether": {
            "description": "Allow nether",
            "type": "enum",
            "default": "true",
            "validation": "false,true"
        },
        "minecraftMaxPlayers": {
            "description": "Max Players",
            "type": "string",
            "default": "20",
            "validation": "[0-9]+"
        }
    }
}
